<h1>歌手一覧</h1>

<p>
<%= button_to('歌手追加', new_artist_path, :class => 'btn', :method => :get) %>
</p>

<table class="table table-striped table-bordered table-condensed">
  <thead>
  <tr>
    <th>歌手名</th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
<% @artists.each do |artist| %>
  <tr>
    <td><%= link_to artist.name, artist %></td>
    <td><%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_artist_path(artist) %></td>
    <td><%= link_to '<i class="icon-trash"></i>'.html_safe, artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
  </tbody>
</table>

