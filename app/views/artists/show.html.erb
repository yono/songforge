<% content_for :title do -%>
  <%= @artist.name %>
<% end -%>
<p id="notice"><%= notice %></p>

<h1><%= @artist.name %></h1>

<% if @artist.songs.size > 0 -%>
<table class='table table-striped table-bordered table-condensed'>
  <thead>
  <tr>
    <th>曲名</th>
  </tr>
  </thead>
  <tbody>
  <% @artist.songs.each do |song| -%>
    <tr>
      <td><%= link_to song.name, song %></td>
    </tr>
  <% end -%>
  </tbody>
</table>
<% end -%>

<%= link_to '歌手情報編集へ', edit_artist_path(@artist) %> |
<%= link_to '歌手一覧へ', artists_path %>
