<%= form_for(:session, url: sessions_path) do |f| %>
  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, class: 'form-control-sm' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control-sm' %>
  </div>

  <%= f.submit "Sign in", class: 'btn btn-outline-primary btn-sm' %>
<% end %>
