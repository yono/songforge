<% content_for :title do -%>
  <%= @song.name %>
<% end -%>
<p id="notice"><%= notice %></p>

<h1><%= @song.name %></h1>

<p>
  <b>歌手:</b>
  <%= link_to @song.artist.name, @song.artist %>
</p>

<p>
  <b>最後に歌った日:</b>
  <%= @song.last_sang_at %>
</p>

<div class='row-fluid'>
  <% if @song.has_movie? -%>
  <div class='span6'>
    <iframe width="420" height="315" src="http://www.youtube.com/embed/<%= @song.youtube_v %>?rel=0" frameborder="0" allowfullscreen></iframe>
  </div>
  <% end -%>

  <% if @song.has_lyrics_file? -%>
  <div class='span6'>
    <%= image_tag lyrics_image_song_path(@song) %>
  </div>
  <% end -%>
</div>

<%= link_to '曲情報編集へ', edit_song_path(@song) %> |
<%= link_to '曲一覧へ', songs_path %>
