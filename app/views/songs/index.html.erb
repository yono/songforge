<h1>曲一覧</h1>

<p>
<%= new_button '曲追加', new_song_path -%>
</p>

<table class="<%= table_css_classes -%>">
  <thead>
  <tr>
    <th></th>
    <th>曲名</th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @songs.each do |song| -%>
  <tr>
    <td><%= song.star_link -%></td>
    <td><%= song.artist_link -%></td>
    <td><%= edit_icon_link edit_song_path(song) -%></td>
    <td><%= delete_icon_link song -%></td>
  </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @songs -%>
