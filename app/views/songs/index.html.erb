<div class='d-flex justify-content-between align-items-center my-2'>
  <div>
    <%= t('.num_of_songs', num: @all_songs.size) -%>
    </div>
  <div>
    <%= link_to t('songs.new.title'), new_song_path, class: 'btn btn-outline-secondary btn-sm' -%>
  </div>
</div>

<table class="<%= table_css_classes -%>">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th><%= Song.human_attribute_name('name') -%></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| -%>
      <tr>
        <% if song.sang? -%>
          <td><%= song.pin_link -%></td>
          <td><%= song.star_link -%></td>
        <% else %>
          <td colspan=2><%= song.star_link -%></td>
        <% end -%>
        <td><%= song.song_link -%></td>
        <td><%= edit_icon_link edit_song_path(song) -%></td>
        <td><%= search_icon_link song -%></td>
        <td><%= delete_icon_link song -%></td>
      </tr>
    <% end -%>
  </tbody>
</table>

<%= paginate @songs -%>
