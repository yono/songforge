<h1>曲一覧</h1>

<p>
<%= button_to('曲追加', new_song_path, :class => 'btn', :method => :get) %>
</p>

<table class="table table-striped table-bordered table-condensed">
  <thead>
  <tr>
    <th>曲名</th>
    <th>歌手名</th>
    <th>最後に歌った日</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
<% @songs.each do |song| %>
  <tr>
    <td><%= song.name %></td>
    <td><%= song.artist_id %></td>
    <td><%= song.last_sang_at %></td>
    <td><%= link_to 'Show', song %></td>
    <td><%= link_to 'Edit', edit_song_path(song) %></td>
    <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
  </tbody>
</table>
